# Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
# Pour le développement local:
DATABASE_URL=postgresql://user:password@localhost:5432/iroko_db

# Pour Neon (gratuit):
# Configurez DATABASE_URL via les secrets GitHub ou Vercel

# Pour Supabase (gratuit):
# DATABASE_URL=postgresql://postgres:your_password@db.xxx.supabase.co:5432/postgres

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d

# CORS
# Pour le développement local:
CORS_ORIGIN=http://localhost,http://localhost:3000,http://localhost:8080

# Pour la production (Vercel):
# CORS_ORIGIN=https://iroko.vercel.app

# Logging
LOG_LEVEL=debug

# Optional: Stripe
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLIC_KEY=pk_test_...

# Optional: Email service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
